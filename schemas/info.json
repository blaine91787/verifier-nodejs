{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "info",
	"description": "Server /info response",
	"type": "object",
	"required": ["HAPI","status","parameters","startDate","stopDate"],	
	"properties": {
		"HAPI": {
			"description": "HAPI Version",
			"type": "string",
			"pattern": "^1.1$"
		},
		"status": {
			"description": "Request status",
			"type": "object",
			"required": ["code","message"],
			"properties": {
				"code": {
					"description": "HAPI status code",
					"type": "integer",
					"enum": [1200]
				},
				"message": {
					"description": "HAPI status message",
					"type": "string"
				}
			}
		},
		"startDate": {
			"description": "start date of parameter data",
			"type": "date-time"
		},		
		"stopDate": {
			"description": "start date of parameter data",
			"type": "date-time"
		},
		"parameters": {
			"description": "Parameters in dataset",
			"type": "array",
			"minItems": 1,
			"additionalItems": true,
			"uniqueItems": true,
			"items": {
				"type": "object",
				"required": ["name","type","units","fill"],
				"properties": {
					"name": {
						"description": "Parameter name",
						"type": "string"
					},
					"type": {
						"description": "Parameter type",
						"type": "string",
						"enum": ["string","double","integer","isotime"]
					},
					"units": {
						"description": "Parameter type",
						"type": ["string",null]
					},
					"length": {
						"description": "Parameter string length for (isotime and string parameters only)",
						"type": "integer"
					},
					"size": {
						"description": "Parameter size",
						"type": "array",
						"items": {"type": "integer"},
						"minItems": 1,
						"minimum": 1,
						"exclusiveMinimum": true
					},
					"fill": {
						"description": "Parameter fill",
						"type":  ["string","null","date-time"]
					}
				}
			}			
		}
	}
}