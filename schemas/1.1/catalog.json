{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "catalog",
	"description": "Server /catalog response",
	"type": "object",
	"required": ["HAPI","status","catalog"],	
	"properties": {
		"HAPI": {
			"description": "HAPI Version",
			"type": "string",
			"pattern": "^1.1$"
		},
		"status": {
			"description": "Request status",
			"type": "object",
			"properties": {
				"code": {
					"description": "HAPI status code",
					"type": "integer",
					"enum": [1200]
				},
				"message": {
					"description": "HAPI status message",
					"type": "string"
				},
				"required": ["code","message"]
			}
		},
		"catalog": {
			"description": "Catalog of datasets",
			"type": "array",
			"items": {"type": "object"},
			"minItems": 1,
			"additionalItems": true,
			"uniqueItems": true,
			"properties": {
				"id": {
					"description": "Dataset ID",
					"type": "string",
					"uniqueItems": true
				},
				"title": {
					"description": "Optional dataset title",
					"type": "string",
					"uniqueItems": true
				},
				"required": ["id"]
			}
		}
	}
}