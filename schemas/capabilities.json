{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "capabilities",
	"description": "Server /capabilities response",
	"type": "object",
	"properties": {
		"HAPI": {
			"description": "HAPI Version",
			"type": "string",
			"pattern": "^1.1$"
		},
		"outputFormats": {
			"description": "Output formats",
			"type": "array",
			"items": {"type": "string"},
			"minItems": 1,
			"additionalItems": true,
			"uniqueItems": true
		},
		"status": {
			"description": "Request status",
			"type": "object",
			"properties": {
				"code": {
					"description": "HAPI status code",
					"type": "integer",
					"enum": [1200]
				},
				"message": {
					"description": "HAPI status message",
					"type": "string"
				},
				"required": ["code","message"]
			}
		}
	},
	"required": ["outputFormats","HAPI","status"]
}